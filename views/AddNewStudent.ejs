    <h1>Fill The Details of Students Given Below</h1>

    <%if(Added){%>
        <p class="submitted">submitted,Add New Student</p>
    <%}else{%>
        <p class="submitted FilterEndSession">submitted,Add New Student</p>
    <%}%>

    <%if(NotAdded){%>
        <p class="Notsubmitted">Not submitted, Please atleast FIll AadharNumber, Name, FatherName , PhoneNumber</p>
    <%}else{%>
        <p class="Notsubmitted FilterEndSession">Not submitted, Please at least FIll Name, FatherName , PhoneNumber</p>
    <%}%>

    <%if(Phone){%>
      <p class="Notsubmitted">Not submitted,Phone Number must be 10 digits</p>
    <%}else{%>
      <p class="Notsubmitted FilterEndSession">Not submitted,Phone Number must be 10 digits</p>
    <%}%>

    <form action="/addStudent" method="POST" class="form" onsubmit="return validateMyForm();">

        <div class="form-group">
        <!-- Personal Details -->
        <input type="text" class="form-control" placeholder="Aadhar Number" name="AadharNumber" autocomplete="off" id="AadharNumber">
        <input type="text" class="form-control" placeholder="Name *" name="Name" autocomplete="off" id="Name">
        <input type="text" class="form-control" placeholder="Father's Name *" name="FatherName" autocomplete="off" id="FatherName">
        <input type="text" class="form-control" placeholder="Phone Number *" name="PhoneNumber" onkeypress="isInputNumber(event)" autocomplete="off" id="PhoneNumber">
        <input type="text" class="form-control" placeholder="Alternate Phone Number" name="AlternatePhoneNumber" onkeypress="isInputNumber(event)" autocomplete="off">
        <input class="form-control" placeholder="Date of Birth" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="DOB">

        <hr>

        <!-- Gender -->
        <div class="Gender">
            <strong>Gender :</strong> 
            <input type="radio" name="gender" value="male">  Male
            <input type="radio" name="gender" value="female">  Female
            <input type="radio" name="gender" value="other">  Other
        </div>

        <hr>

        <!-- Locker -->
        <div class="Facility">
          <strong>Locker :</strong> 
          <input type="radio" name="Locker" value="Yes">  Yes
          <input type="radio" name="Locker" value="No">  No
        </div>

        <hr>

        <!-- Shift -->
        <div class="Facility">
          <div id="border">
          <strong>Shift* :</strong> 
          <input type="radio" id="MorningShift" name="Shift" value="morning">  Morning
          <input type="radio" id="EveningShift" name="Shift" value="evening">  Evening
          <input type="radio" id="FulltimeShift" name="Shift" value="full time">  Full Time
          <input type="radio" id="NightShift" name="Shift" value="Night">  Night
          <input type="radio" id="24HourShift" name="Shift" value="24Hour">  24 Hour
          <input type="radio" id="OtherShift" name="Shift" value="Other">  Other
          </div>
          <div class="TimingOther FilterEndSession" id="TimingOther">
            <input type="time" id="OtherShiftTimingFrom" name="OtherShiftTimingFrom" autocomplete="off" value="12:00">
            <p>to</p>
            <input type="time" id="OtherShiftTimingTo" name="OtherShiftTimingTo" autocomplete="off" value="12:00"> 
          </div> 
        </div>
        
        <hr>

        <!-- Reservation -->
        <div class="Facility" id="ReSeat">
          <strong>Reservation :</strong> 
          <input type="radio" id="r1" name="Reservation" value="Yes">  Yes
          <input type="radio" id="r2" name="Reservation" value="No">  No
        </div>
        <input type="text" id="ReservedSeatNumber" class="form-control FilterEndSession" placeholder="Reserved Seat Number" name="ReservedSeatNumber" autocomplete="off">

        <hr>

        <!-- Address Details -->
        <input class="form-control" placeholder="Date of Join*" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="DOJ" id="JoinDate">
        <input class="form-control" placeholder="Ending of session Date*" type="text" onfocus="SetValue(); (this.type='date')" onblur="(this.type='text')" name="EndingDate" id="EndingDate">
        
        <hr>

        <input type="number" class="form-control" placeholder="Fees*" name="Fees" autocomplete="off" id="Fees">
        <input type="number" class="form-control" placeholder="Advance" name="Advance" autocomplete="off">
        <input type="number" class="form-control" placeholder="Balance" name="Balance" autocomplete="off">

        <hr>

        <div class="Facility">
          <div id="border2">
          <strong>Payment Mode* :</strong> 
            <input type="radio" name="PaymentMode" value="Online">  Online
            <input type="radio" name="PaymentMode" value="Offline">  Offline
          </div>
        </div>

        <hr>

        <input type="text" class="form-control" placeholder="House No." name="HouseNo" autocomplete="off">
        <input type="text" class="form-control" placeholder="Street or COlony Name" name="Colony" autocomplete="off">
        <input type="text" class="form-control" placeholder="Landmark" name="Landmark" autocomplete="off">
        <input type="text" class="form-control" placeholder="District" name="District" autocomplete="off">
        
        <button type="submit" class="btn btn-dark btn-lg">Proceed</button>
        </div>


    </form>

